<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/dialog_long_bookinfo_cover"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/dialog_long_bookinfo_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/dialog_long_bookinfo_cover"
        android:maxLines="2"
        android:text="书 名："
        android:textColor="#000000"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/dialog_long_bookinfo_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_long_bookinfo_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/dialog_long_bookinfo_cover"
        android:maxLines="1"
        android:text="作 者："
        android:textColor="@color/colorGray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/dialog_long_bookinfo_lastChapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_long_bookinfo_author"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/dialog_long_bookinfo_cover"
        android:maxLines="1"
        android:text="最 新："
        android:textColor="@color/colorGray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/dialog_long_bookinfo_shortIntro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/dialog_long_bookinfo_lastChapter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/dialog_long_bookinfo_cover"
        android:maxLines="4"
        android:text="简 介："
        android:textColor="@color/colorGray"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_long_bookinfo_cover"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_long_bookinfo_latelyFollower"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="人气"
            android:textColor="#e23326" />

        <TextView
            android:id="@+id/dialog_long_bookinfo_retentionRatio"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="留存率"
            android:textColor="#ed9922" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_long_bookinfo_negative"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@mipmap/cancel" />

</RelativeLayout>