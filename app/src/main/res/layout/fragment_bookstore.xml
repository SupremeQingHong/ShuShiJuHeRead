<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.crosswall.lib.coverflow.core.PagerContainer
        android:id="@+id/book_store_mzbanner_recommend"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:clipChildren="false"
        android:background="?attr/colorPrimary">
        <android.support.v4.view.ViewPager
            android:id="@+id/book_store_overlap_pager"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="#fff"/>
    </me.crosswall.lib.coverflow.core.PagerContainer>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_store_mzbanner_recommend"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/book_store_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="分类"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/book_store_tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="排行"
            android:textSize="16dp" />
    </RelativeLayout>


</RelativeLayout>